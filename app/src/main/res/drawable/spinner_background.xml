<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF"/> <!-- your preferred color -->
                    <corners android:radius="4dp"/>
                    <stroke android:width="1dp" android:color="#808080"/> <!-- outline color -->
                </shape>
            </item>
            <item android:right="12dp">
                <bitmap android:src="@android:drawable/arrow_down_float" android:gravity="center_vertical|right"/>
            </item>
        </layer-list>
    </item>
</selector>
