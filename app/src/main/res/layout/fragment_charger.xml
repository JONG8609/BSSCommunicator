                                android:textSize="25dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:gravity="right|center"
                                android:text="V"
                                android:textSize="25dp" />

                        </LinearLayout>

